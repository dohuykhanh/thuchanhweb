
@model IEnumerable<Dohuykhanh.App_Start.Rubik>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div class="row">
    @foreach (var item in Model)
            {
                <div class="col-lg-4 col-md-4 col-sm-6 col-sx-12">
                    <div class="panel panel-default">
                        <div class="panel panel-heading">
                            <strong>@item.ten</strong>
                        </div>
                        <div class="panel-body">
                            <p><strong>Loai: </strong>@item.maloai</p>
                            <p><strong>Mô tả: </strong>@item.mota</p>
                            <p><strong>Hãng: </strong>@item.hang</p>
                            <p><strong>Giá: </strong>@item.gia</p>
                            <p><img src="~/Content/Hinh/@item.hinh" class="img-responsive" alt="hinh thumnail" /></p>
                            <p><strong>Còn lại: </strong>@item.soluongton</p>
                            <p><strong>Ngày cập nhật: </strong>@item.ngaycapnhat</p>
                        </div>
                        <div class="panel-footer clearfix">
                            <div class="pull-right">
                                <div class="Datmua">
                                    <a class="btn btn-success"
                                       href="@Url.Action("ThemGioHang", "GioHang", new {@id=item.id, @strURL = Request.Url.ToString()})">Đặt mua</a>
                                </div>

                            </div>
                        </div>

                    </div>

                </div>

            }

</div>

